{
  "name": "bfp-ms-account",
  "version": "1.0.0",
  "main": "src/index.ts",
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "build": "tsc",
    "start": "node build/index.js",
    "format": "prettier --write '{src,tests}/**/*.ts'"
  },
  "keywords": [],
  "author": "Emmanuel Okuchukwu (eokuchukwu95@gmail.com)",
  "license": "ISC",
  "description": "Microservice that enables bank integration with open banking api.",
  "dependencies": {
    "drizzle-orm": "^0.38.4",
    "pg": "^8.13.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/pg": "^8.11.10",
    "drizzle-kit": "^0.30.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5"
  },
  "jest": {
    "coverageDirectory": "coverage/",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "dist/",
      "coverage/",
      "tests/",
      "src/index.js",
      "src/app.js",
      "src/server.js"
    ],
    "coverageThreshold": {
      "global": {
        "statemetns": 90,
        "functions": 95
      }
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/build/",
      "/tests/"
    ],
    "roots": [
      "<rootDir>/"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "**/test/**/*.+(ts|js)",
      "**/?(*.)+(spec|test).+(ts|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "verbose": true
  }
}
